include ../setup/path

-
  var styles = [
    '//fonts.googleapis.com/css2?family=Roboto&family=Roboto+Mono&display=swap',
    '//cdnjs.cloudflare.com/ajax/libs/godlike.css/3.0.0/godlike.min.css', // reset
    'https://cdnjs.cloudflare.com/ajax/libs/lightcase/2.3.4/css/lightcase.min.css',
    path.css + "styles.min.css"
  ]

block styles
  for href in styles
    link(rel='stylesheet', href=href)
